<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.trenhquyhung_exe2.DrawingView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/view"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <Button android:layout_width="100dp" android:layout_height="match_parent" android:background="@drawable/ic_arrow_upward_black_24dp" android:id="@+id/btn_len"/>
        <Button android:layout_width="100dp" android:layout_height="match_parent" android:background="@drawable/ic_arrow_downward_black_24dp" android:id="@+id/btn_xuong"/>
        <Button android:layout_width="100dp" android:layout_height="match_parent" android:background="@drawable/ic_arrow_back_black_24dp" android:id="@+id/btn_trai"/>
        <Button android:layout_width="100dp" android:layout_height="match_parent" android:background="@drawable/ic_arrow_forward_black_24dp" android:id="@+id/btn_phai"/>
    </LinearLayout>

</LinearLayout>