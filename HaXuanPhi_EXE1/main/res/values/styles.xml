<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="title">
        <item name="android:background">@drawable/title</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:text">Quản Lý Xe Máy</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="maxe">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">Mã Xe</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="tenxe">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">Tên xe</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="input">
        <item name="android:background">@drawable/nhap</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="hangsx">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="rbhang">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="btn">
        <item name="android:background">@drawable/them</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="ds">
        <item name="android:background">@drawable/danhsach</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:text">Danh sách xe máy</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
