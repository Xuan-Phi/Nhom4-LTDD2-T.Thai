<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="MyAppTheme_sang" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="tieude">
        <item name="android:background">@drawable/tieude</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="textview">
        <item name="android:background">@drawable/textview</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="btnNut">
        <item name="android:background">@drawable/btnpheptinh</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="spiner">

        <item name="android:background">@drawable/spiner</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="sunshine">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="night">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
